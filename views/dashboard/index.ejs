              y: {
                beginAtZero: true,
                title: {
                  display: true,
                  text: 'Value'
                }
              }
            },
          }
        });
      </script>
      <script>
         //Swimming Chart
        const swimLabels = <%- JSON.stringify(swimDates) %>;       // x-axis (dates)
        const swimDistances = <%- JSON.stringify(swimDistances) %>; // y-axis 1
        const swimDurations = <%- JSON.stringify(swimDurations) %>; // y-axis 2
        const swimPaces = <%- JSON.stringify(swimPaces) %>;// y-axis 3

        // console.log("Labels:", swimLabels);
        // console.log("Distances:", swimDistances);
        // console.log("Durations:", swimDurations);

        new Chart("swimChart", {
          type: 'line',
          data: {
            labels: swimLabels,
            datasets: [
              {
                label: 'Distance (km)',
                data: swimDistances,
                borderColor: '#3273dc',
                fill: false,
                tension: 0.3
              },
              // {
              //   label: 'Duration (min)',
              //   data: swimDurations,
              //   borderColor: '#48c774', // green
              //   fill: false,
              //   tension: 0.3
              // },
              {
                label: 'Pace (min/100m)',
                data: swimPaces,
                borderColor: '#ff3860', ///red
                borderDash: [5, 5], // dashed line
                fill: false,
                tension: 0.3
              }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              x: {
                title: {
                  display: true,
                  text: 'Date'
                }
              },
              y: {
                beginAtZero: true,
                title: {
                  display: true,
                  text: 'Value'
                }
              }
            },
          }
        });
      </script>
    </section>
  </body>
</html>
